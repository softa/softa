!!!5
= render 'layouts/softa'
%html{ :lang => 'pt-br'}
  %head
    %meta{ :charset => 'UTF-8' }
    /[if IE]
      %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge;chrome=1' }
    %title= t 'head.title'
    %meta{ :name => :robots, :content => 'index, follow' }
    %meta{ :name => :description, :content => t('head.description') }
    %meta{ :name => :author, :content => 'Softa' }
    %meta{ :name => :keywords, :content => 'web 2.0, web2, ruby on rails, ruby, rails, postgres, postgresql, métodos ágeis, agile programming, extreme programming, xp, ajax, javascript, aplicações web 2.0, sistemas web, desenvolvimento, diogo biazus, daniel weinmann, juan maiz, pedro axelrud, felipe cabral, léo tartari, design, softa, programação, arquitetura de informação, usabilidade, web2.0, ui, ux' }
    %meta{ :name => 'viewport', :content=> 'width=device-width; initial-scale=1.0; maximum-scale=1.0;' }
    = stylesheet_link_tag 'screen.css', 'shadowbox.css', :media => 'screen, projection'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
      = javascript_include_tag 'selectivizr/selectivizr'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js',  'juitter/jquery.juitter', 'juitter/system', 'http://html5shim.googlecode.com/svn/trunk/html5.js', 'scrollTo', 'shadowbox/shadowbox', 'jquery.lazyload.mini'
    = csrf_meta_tag
    :javascript
      Shadowbox.init({ overlayOpacity: 0.8, animate: false });
    %link{ :rel => 'apple-touch-icon-precomposed', :href => 'apple-touch-icon.png'}
    %link{ :rel => 'shortcut icon', :href => 'favicon.ico' }
  %body#top
    #back_to_top #{link_to image_tag('to_top.png'), '#top' }
    %header= render 'layouts/navigation'
    #content= yield
    .clear
    %footer= render 'layouts/footer'
    .post_footer
      #colophon
        %p #{image_tag 'softa_footer.png'} · 2010 · #{t('colophon.five_years')}
    = javascript_include_tag 'softa'
    = render 'layouts/google_analytics'