#softa_works
  .wrapper
    .arrow_left
    .arrow_right
    %section
      %h1 Trabalhos
      #maileeme.work_showcase
        %section
          .work_showcase_info
            %h3= link_to image_tag('work/maileeme/maileeme_logo.png', :alt => 'Mailee.me - Email marketing 2.0'), 'http://mailee.me'
            %p Email marketing com criador de templates, geolocalização e integração com redes sociais.
            %ul.mailee_links
              %li Acesse o site » #{link_to 'mailee.me', 'http://mailee.me'}
              %li Acompanhe no Twitter » #{twitter 'maileeme'}
              %li Confira o Blog » #{link_to 'blog.mailee.me', 'http://blog.mailee.me'}
            %ul.showcase_more_images
              %li= image_tag 'work/maileeme/maileeme_small_one.jpg'
              %li= image_tag 'work/maileeme/maileeme_small_two.jpg'
              %li= image_tag 'work/maileeme/maileeme_small_three.jpg'
          .work_showcase_image= image_tag 'work/maileeme/maileeme_showcase.png'
          .clear
      #circlo.work_showcase
